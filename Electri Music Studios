
document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');

    var selectedDate = null;
    var selectedTime = null;

    var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        selectable: true,
        select: function(info) {
            selectedDate = info.startStr;
            selectedTime = prompt("Choose a time (e.g., 2:00 PM):");
            if (selectedTime) {
                alert("Selected: " + selectedDate + " at " + selectedTime);
                document.getElementById("paypal-button-container").style.display = "block";
            }
        }
    });

    calendar.render();

    paypal.Buttons({
        createOrder: function(data, actions) {
            return actions.order.create({
                purchase_units: [{
                    amount: { value: '50.00' },
                    description: "Electri Music Studio Session"
                }]
            });
        },
        onApprove: function(data, actions) {
            return actions.order.capture().then(function(details) {
                alert("Payment complete! Booking confirmed for " + selectedDate + " at " + selectedTime);
            });
        }
    }).render('#paypal-button-container');
});


